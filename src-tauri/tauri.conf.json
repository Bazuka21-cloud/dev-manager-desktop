{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run ng build",
    "beforeDevCommand": "npm run ng serve -- --port 4280",
    "devPath": "http://localhost:4280",
    "distDir": "../dist"
  },
  "package": {
    "productName": "webOS Dev Manager",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true
      },
      "shell": {
        "open": ".*"
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": [
          "libssl1.1"
        ]
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "org.webosbrew.devman",
      "longDescription": "webOS Dev Manager",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "license": "../LICENSE"
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "license": "../LICENSE"
        },
        "webviewInstallMode": {
          "type": "embedBootstrapper",
          "silent": false
        }
      }
    },
    "security": {
      "csp": null,
      "devCsp": "default-src 'self' localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "webOS Dev Manager",
        "width": 1024,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true
      }
    ]
  }
}
